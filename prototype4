featuredList.addEventListener('click', e=>{
  const wrap = e.target.closest('.product');
  if(!wrap) return;
  const title = wrap.querySelector('.p-title').textContent;
  const found = PRODUCTS.find(p=>p.title===title);
  if(found) openModal(found.id);
});

